{
  "name": "tp-components-vue3",
  "private": true,
  "version": "0.0.3",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "link-dev": "vite build --mode production --watch && npm run generate:types",
    "build": "vite build --mode production && npm run generate:types",
    "prepare": "vite build --mode production && npm run generate:types",
    "lint": "eslint . --ignore-pattern 'node_modules/*' --ignore-pattern 'dist/*'",
    "generate:types": "vue-tsc -p tsconfig-build.json --declaration --emitDeclarationOnly true --outdir ./dist",
    "preview": "vite preview",
    "tailwind": "npx tailwindcss -i ./src/TpComponents/tailwind.css -o ./src/TpComponents/style.css --watch"
  },
  "main": "./dist/tp-components.umd.cjs",
  "module": "./dist/tp-components.js",
  "types": "./dist/components/index.d.ts",
  "peerDependencies": {
    "tailwindcss": "^3.4.3",
    "vue": "^3.4.21"
  },
  "exports": {
    ".": {
      "import": "./dist/tp-components.js",
      "require": "./dist/tp-components.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./dist/*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.22",
    "@heroicons/vue": "^2.1.3",
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.19",
    "dayjs": "^1.11.11",
    "flowbite": "^2.3.0",
    "plotly.js-dist-min": "^2.33.0",
    "postcss": "^8.4.38",
    "vue-advanced-cropper": "^2.8.9",
    "vue-tailwind-datepicker": "^1.7.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.14.2",
    "@vitejs/plugin-vue": "^5.0.5",
    "eslint": "^9.4.0",
    "eslint-plugin-vue": "^9.26.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vite-plugin-static-copy": "^1.0.5",
    "vitest": "^1.6.0",
    "vue-tsc": "^1.8.27"
  }
}
